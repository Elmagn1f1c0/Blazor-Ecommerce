@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@using System.Security.Claims

@if (authorized)
{
    <a class="dropdown-item" href="admin/categories" @onclick="NavigateToCategories">Categories</a>
    <a class="dropdown-item" href="admin/product-types" @onclick="NavigateToProductTypes">Product Types</a>
    <hr />
}

@code {
    bool authorized = false;


    protected override async Task OnInitializedAsync()
    {
        string role = (await AuthStateProvider.GetAuthenticationStateAsync())
        .User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role).Value;
        if (role.Contains("Admin"))
        {
            authorized = true;
        }
    }
    private async Task NavigateToCategories()
    {
        await Task.Delay(100);
        NavigationManager.NavigateTo("/admin/categories");
    }
    private async Task NavigateToProductTypes()
    {
        await Task.Delay(100);
        NavigationManager.NavigateTo("/admin/product-types");
    }
}
   